            padding: 6px 12px;
            border: 1.5px solid rgba(255, 255, 255, 0.4);
            border-radius: 24px;
            font-size: 0.8em;
            display: flex;
            align-items: center;
            gap: 6px;
            color: white;
        }

        .card-footer {
            background-color: white;
            color: #000;
            border-radius: 0 0 25px 25px;
            padding: 18px 17px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 15px;
            border: 2px solid #1547F9;
        }

            .card-footer span {
                font-size: 0.9em;
            }

        .salario {
            font-weight: bold;
            color: #111;
            font-family: "satoshi";
        }

        .vaga-detalhes {
            background: #fff;
            padding: 20px;
        }

        .btn-candidatar, .btn-salvar {
            padding: 10px 20px;
            border-radius: 20px;
            border: none;
            font-weight: bold;
            cursor: pointer;
        }

        .btn-candidatar {
            background: #007bff;
            color: white;
            margin-right: 10px;
        }

        .btn-salvar {
            background: #333;
            color: white;
        }

        .buscar{
            background-color: #000;
            color: white;
            border-radius: 20px;
            font-family: "satoshi";
            width: 100px;
            cursor: pointer;
            border: none;
            font-weight: 600;
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 10;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow-y: auto;
            background-color: rgba(0,0,0,0.5);
        }

        .modal-content {
            background: white;
            margin: 5% auto;
            padding: 20px;
            border-radius: 8px;
            max-width: 500px;
            max-height: 90vh;
            overflow-y: auto;
        }

            .modal-content input,
            .modal-content textarea {
                width: 100%;
                margin: 8px 0;
                padding: 10px;
                border-radius: 5px;
                border: 1px solid #ccc;
            }

        .submit-btn {
            background: black;
            color: white;
            padding: 10px 20px;
            border-radius: 30px;
            border: none;
            font-weight: bold;
            cursor: pointer;
        }

        .confirmation {
            margin-top: 12px;
            background: #2b74f8;
            color: white;
            padding: 10px;
            border-radius: 6px;
            text-align: center;
        }

        footer {
            text-align: center;
            padding: 20px;
            font-size: 0.85em;
            color: #666;
        }

        .painel-detalhes-flutuante {
            position: fixed;
            top: 60px; /* mais próximo do topo */
            right: 40px; /* mais próximo dos cards, diminua se quiser mais perto */
            width: 900px; /* mais largo */
            max-width: 95vw;
            min-width: 380px;
            height: auto; ,
            max-height: calc(100vh - 80px);
            background: #fff;
            box-shadow: -2px 0 16px rgba(0,0,0,0.12);
            border-radius: 16px 0 0 16px;
            z-index: 100;
            padding: 32px 28px 28px 28px;
            overflow-y: auto;
            display: none;
            animation: painelDetalhesFadeIn 0.2s;
        }
        keyframes painelDetalhesFadeIn {
            from { opacity: 0; right: -40px; }
            to { opacity: 1; right: 0; }
        }

        p.limite-duas-linhas {
        display: -webkit-box;
        -webkit-line-clamp: 2;      /* número de linhas */
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        }

        media (max-width: 730px) {
            .painel_detalhes_flutuante{
                width: auto;
            }
        }

    </style>
</body>
</html>