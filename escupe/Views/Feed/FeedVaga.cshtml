@model escupe.ViewModels.FeedVagaViewModel
@{
    var cargo = Context.Request.Query["cargo"].ToString();
    var localizacao = Context.Request.Query["localizacao"].ToString();
    Layout = null;
}

@section Styles {
    <link rel="stylesheet" href="~/css/vagas.css" asp-append-version="true" />
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <title>Esculp - Vagas</title>
    <link rel="icon" href="~/imagens/favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="~/css/vagas.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://api.fontshare.com/v2/css?f[]=satoshi@400,500,700,900&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />
</head>
<body>
    <header class="site-header">
        <a href="@Url.Action("Index", "Vaga")" class="icone-container">
            <img src="~/imagens/icone.png" alt="Logo do Site" class="site-logo" />
            <span class="site-nome">Esculp</span>
        </a>
        <a href="@Url.Action("PerfilCandidato", "Feed")" class="icone-perfil" title="Perfil">
            <svg xmlns="http://www.w3.org/2000/svg" class="perfil-icon" viewBox="0 0 24 24" width="28" height="28">
                <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4
        1.79-4 4 1.79 4 4 4zm0 2c-2.67
        0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
            </svg>
        </a>
    </header>
    <form method="get" action="@Url.Action("FeedVaga", "Feed")" class="search-bar">
        <input type="text" name="cargo" placeholder="Procure por cargo, vaga ou setor" value="@cargo" />
        <input type="text" name="localizacao" placeholder="Cidade, estado ou 'remoto'" value="@localizacao" />
        <button class="buscar" type="submit">Buscar</button>
    </form>

    <main>
        @for (int i = 0; i < Model.Vagas.Count; i++)
        {
            var vaga = Model.Vagas[i];
            <div class="card" onclick="mostrarDetalhes(@i)">
                <div class="card-top">
                    <h3>@vaga.Titulo</h3>
                    <span>@vaga.NomeFantasia</span>
                </div>
                <div class="tags">
                    <div class="tag">@vaga.Localizacao</div>
                    <div class="tag">@vaga.Setor</div>
                    <div class="tag">@vaga.DataPublicacao.ToString("MMMM yyyy")</div>
                </div>
                <p class="limite-duas-linhas">@vaga.Descricao</p>
                <div class="card-footer">
                    <span>Postado @vaga.DataPublicacao dias atrás</span>
                    <span class="salario">R$ @vaga.Salario.ToString("N2")</span>
                </div>
                <div class="vaga-detalhes" id="detalhes-@i" style="display:none"></div>
            </div>
        }

        <div id="painelDetalhes" class="painel-detalhes-flutuante">
            <p class="placeholder" id="placeholderMsg">Clique em uma vaga para ver os detalhes</p>
        </div>

        <div id="formModal" class="modal">
            <div class="modal-content">
                <span class="close" id="closeModalBtn">&times;</span>
                <h2>Informações do Candidato</h2>
                <form method="post" action="/Feed/Candidatar" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="vagaId" id="vagaIdInput" />
                    <label>Email:</label>
                    <input type="email" name="email" required />
                    <label>Telefone:</label>
                    <input type="tel" name="telefone" required />
                    <label>Currículo (PDF):</label>
                    <input type="file" name="curriculo" accept=".pdf" required />
                    <label>Breve descrição sobre você:</label>
                    <textarea name="descricao" rows="5" required></textarea>
                    <button type="submit" class="submit-btn">Enviar</button>
                </form>
            </div>
        </div>
    </main>

    <footer>
        <p><strong>Contato:</strong> EmpresaEsculp@gmail.com</p>
        <p><strong>Busque por:</strong> Empresas, Vagas, Oportunidade</p>
        <strong>Copyright © 2025. Esculp LLC. “Esculp” e seu logotipo são marcas registradas.</strong>
    </footer>

    <script>
        // Array de detalhes das vagas no formato HTML
        const detalhesVagas = [
        @for (int i = 0; i < Model.Vagas.Count; i++)
        {
            var vaga = Model.Vagas[i];
            <text>
                `<div class="btn-detalhes">
                                        <button class="btn-apply" onclick="abrirModal(event, @vaga.Id)">Candidatar-se</button>
                                    </div>
                                    <section class="details">
                                        <h4>📄 Descrição da vaga</h4>
                                        <p>@vaga.Descricao</p>
                                    </section>
                                    <section class="details">
                                        <h4>🧭 Localização</h4>
                                        <p>@vaga.Localizacao</p>
                                    </section>
                                    <section class="details">
                                        <h4>💰 Salário</h4>
                                        <p>@vaga.Salario.ToString("C")</p>
                                    </section>
                                    <section class="details">
                                        <h4>🎁 Benefícios</h4>
                                        <p>@vaga.Beneficios</p>
                                    </section>
                                    <section class="details">
                                        <h4>📅 Publicação</h4>
                                        <p>@vaga.DataPublicacao.ToString("dd/MM/yyyy")</p>
                                    </section>`
                @(i < Model.Vagas.Count - 1 ? "," : "")
            </text>
        }
                ];

        function mostrarDetalhes(index) {
            let painel = document.getElementById('painelDetalhes');
            let placeholder = document.getElementById('placeholderMsg');
            if (placeholder) placeholder.style.display = 'none';
            painel.innerHTML = detalhesVagas[index];
            painel.style.display = 'block';
        }

        // Exibe a mensagem ao carregar a página
        document.addEventListener("DOMContentLoaded", function () {
            let painel = document.getElementById('painelDetalhes');
            painel.style.display = 'block';
            painel.innerHTML = '<p class="placeholder" id="placeholderMsg">Clique em uma vaga para ver os detalhes</p>';
        });

        // Abre o modal de candidatura e define o vagaId
        function abrirModal(event, vagaId) {
            event.stopPropagation();
            document.getElementById("formModal").style.display = "block";
            document.getElementById("vagaIdInput").value = vagaId;
        }

        // Fecha o painel de detalhes ao clicar fora dele
        document.addEventListener('click', function (e) {
            const painel = document.getElementById('painelDetalhes');
            if (painel && painel.style.display === 'block' && !painel.contains(e.target) && !e.target.classList.contains('card')) {
                painel.style.display = 'none';
            }
        });

        // Modal de candidatura
        document.addEventListener("DOMContentLoaded", () => {
            const modal = document.getElementById("formModal");
            const close = document.getElementById("closeModalBtn");
            const form = document.querySelector(".modal-content form");

            close.addEventListener("click", () => modal.style.display = "none");
            window.addEventListener("click", e => {
                if (e.target === modal) modal.style.display = "none";
            });

            form.addEventListener("submit", e => {
                // Aqui você pode remover o preventDefault se quiser submeter normalmente
                // e.preventDefault();
                // const msg = document.createElement("div");
                // msg.className = "confirmation";
                // msg.textContent = "✔ Formulário enviado com sucesso!";
                // form.appendChild(msg);
                // form.reset();
                // setTimeout(() => {
                //     modal.style.display = "none";
                //     msg.remove();
                // }, 3000);
            });
        });
    </script>
  

    <style>
    /* Insira aqui seu CSS moderno ou importe de um arquivo externo */
        <style >
        /* Insira aqui seu CSS moderno ou importe de um arquivo externo */
        body {
            font-family: 'Inter', sans-serif;
            margin: 0;
            padding: 0;
        }

        main {
            display: flex;
            flex-direction: column;
            align-items: flex-start; /* Alinha os cards à esquerda */
            gap: 24px; /* Espaço entre os cards */
            margin-left: 40px; /* Opcional: afasta da borda esquerda */
        }
        .card {
            width: auto;
            height: auto;
            max-width: 450px;
            margin: 0;
            left: 0px;
            top: 0px;
            border-radius: 25px;
            background: #1547F9;
        }

            .card:hover {
                transform: translateY(-2px);
            }

            .card h3 {
                margin: 0;
                font-size: 1em;
                font-weight: bold
            }

        .card-top {
            display: flex;
            flex-direction: column;
            align-items: left;
            margin: 17px;
            margin-bottom: 15px;
            color: white;
            gap: 10px;
        }

        .card span {
            margin: 0;
            font-size: 0.8em;
            opacity: 0.9;
        }

        .card p {
            font-size: 0.8em;
            line-height: 1.4em;
            margin: 17px;
            margin-top: 15px;
            color: white;
            width: 420px;
            right: 40px;
            max-width: 385px;
            max-height: 43px;
        }

        .tags {
            padding-left: 15px;
            margin: 0px;
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
        }

        .tag {
